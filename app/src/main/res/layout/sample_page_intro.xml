<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main_registerPageBack">


    <com.dev.voltsoft.lib.view.MaterialDesignButton
        android:layout_width="@dimen/dp150"
        android:layout_height="@dimen/dp150"
        android:background="@color/main_themecolorStart"
        android:layout_gravity="center_horizontal"
        android:text="hello world"
        android:gravity="center"
        android:textColor="@color/color_white"
        android:textSize="25sp"
        android:textStyle="italic|bold"
        android:layout_marginTop="40dp"
        app:connerRoundRadius="@dimen/dp15"/>


    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:weightSum="99"
        android:layout_marginBottom="30dp"
        android:layout_gravity="center_horizontal|bottom">

        <com.dev.voltsoft.lib.view.insert.InsertForm
            android:id="@+id/introInsertForm1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="33"
            app:insertTextType="email"
            app:themeColor="@color/color_white"
            app:title="아이디" />

        <com.dev.voltsoft.lib.view.insert.InsertForm
            android:id="@+id/introInsertForm2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="33"
            app:insertTextType="password"
            app:themeColor="@color/color_white"
            app:imeOptionType="actionDone"
            app:title="패스워드" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="33"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp20"
            android:paddingTop="@dimen/dp10"
            android:paddingRight="@dimen/dp20"
            android:weightSum="100">

            <com.dev.voltsoft.lib.view.MaterialDesignButton
                android:id="@+id/introButton02"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp42"
                android:layout_weight="65"
                android:text="로그인"
                android:textSize="15sp"
                android:textColor="@color/color_white"
                app:connerRoundRadius="@dimen/dp15" />


            <com.dev.voltsoft.lib.view.MaterialDesignButton
                android:id="@+id/introButton01"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp42"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_weight="35"
                android:text="회원가입"
                android:textColor="@color/color_white"
                android:textSize="15sp"
                app:connerRoundRadius="@dimen/dp15" />


        </LinearLayout>

    </LinearLayout>

</FrameLayout>


