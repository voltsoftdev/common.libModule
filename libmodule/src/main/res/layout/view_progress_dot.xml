<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/dp50"
        android:layout_height="@dimen/dp50"
        android:layout_gravity="center"
        android:background="@drawable/shape_circle03"
        android:clipChildren="false"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:id="@+id/progressDot0"
            android:layout_width="@dimen/dp5"
            android:layout_height="@dimen/dp5"
            android:layout_margin="@dimen/dp3"
            android:background="@drawable/shape_circle_white" />

        <View
            android:id="@+id/progressDot1"
            android:layout_width="@dimen/dp5"
            android:layout_height="@dimen/dp5"
            android:layout_margin="@dimen/dp3"
            android:background="@drawable/shape_circle_white" />

        <View
            android:id="@+id/progressDot2"
            android:layout_width="@dimen/dp5"
            android:layout_height="@dimen/dp5"
            android:layout_margin="@dimen/dp3"
            android:background="@drawable/shape_circle_white" />

        <View
            android:id="@+id/progressDot3"
            android:layout_width="@dimen/dp5"
            android:layout_height="@dimen/dp5"
            android:layout_margin="@dimen/dp3"
            android:background="@drawable/shape_circle_white" />

    </LinearLayout>

    <TextView
        android:id="@+id/progressDotMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp15"
        android:textColor="@color/color_white"
        android:text="loading.."
        android:textSize="@dimen/dp18"/>

</LinearLayout>